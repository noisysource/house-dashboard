{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Power Service",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/be/packages/power-service",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "name": "Start Device Service",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/be/packages/device-service",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "name": "Start GraphQL API",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/be/packages/graphql-api",
      "env": {
        "NODE_ENV": "development",
        "MONGO_URI": "mongodb://localhost:27017/house_dashboard",
        "MQTT_HOST": "mqtt://localhost:1883"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "name": "Start Frontend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "cwd": "${workspaceFolder}/fe",
      "env": {
        "BROWSER": "none",
        "REACT_APP_GRAPHQL_ENDPOINT": "http://localhost:4000/graphql"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
  ],
  "compounds": [
    {
      "name": "Full Development Environment",
      "configurations": ["Start Power Service", "Start Device Service", "Start GraphQL API", "Start Frontend"]
    }
  ]
}