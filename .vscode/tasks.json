{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start MQTT Broker",
      "type": "shell",
      "command": "docker-compose up mqtt-broker",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "develop"
      }
    },
    {
      "label": "Start Power Service",
      "type": "shell",
      "command": "cd be/packages/power-service && npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "develop"
      }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "cd fe && npm start",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "develop"
      }
    },
    {
      "label": "Start Development Environment",
      "dependsOn": ["Start MQTT Broker", "Start Power Service", "Start Frontend"],
      "dependsOrder": "parallel",
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "group": "develop"
      }
    },
    {
      "label": "Test MQTT",
      "type": "shell",
      "command": "cd test && node mqtt-test.js",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}